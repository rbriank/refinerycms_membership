<h2><%= t('members_administration', :scope => 'refinery.admin.members')%></h2>
<div id='records' class="pagination_container">
  <%= render :partial => 'members' %>
</div>
<div id='actions'>
  <%= render :partial => '/refinery/memberships/admin/shared/memberships_actions',
              :locals => {:section => 'members'} %>
</div>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'refinery/memberships/members_grid' %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag 'jquery.cookie.js', 'refinery/memberships/membership.jquery.js','jquery.event.drag-2.0.min.js', 'slick.core.js', 'slick.grid.js' %>
  <script>
  $(function(){
    $("#members").slickGrid();
  });
</script>
<% end %>
