<h2><%= Refinery::Memberships::MembershipEmailPart.model_name.human %>: <%= t(@membership_email_part.title, :scope => 'refinery.admin.membership_email_parts') %></h2>
<%= form_for [:admin, @membership_email_part], :url => @url_override || @url do |f| -%>

  <%= render :partial => "/refinery/admin/error_messages",
             :locals => {
               :object => @membership_email_part,
               :include_object_name => false
             } %>

  <%= render :partial => "/refinery/admin/pages/locale_picker",
             :locals => {
               :current_locale => Thread.current[:globalize_locale]
             } if defined?(::Refinery::I18n) %>

  <%= render :partial => "body_field", :locals => {:f => f} %>

  <%= render :partial => "/refinery/admin/form_actions",
             :locals => {
               :f => f,
               :continue_editing => false,
               :hide_cancel => (@app_dialog or action_name == "insert" or from_dialog?),
               :hide_delete => true
  } %>
<% end -%>
